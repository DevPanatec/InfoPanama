# ==============================================
# CONVEX DATABASE
# ==============================================
CONVEX_DEPLOYMENT=prod:accomplished-rhinoceros-93
NEXT_PUBLIC_CONVEX_URL=https://accomplished-rhinoceros-93.convex.cloud

# ==============================================
# OPENAI API
# ==============================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# ==============================================
# QDRANT VECTOR DATABASE
# ==============================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=infopanama_vectors

# ==============================================
# DIGITALOCEAN SPACES (S3 Compatible)
# ==============================================
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=infopanama-snapshots
DO_SPACES_REGION=nyc3

# ==============================================
# PROXYSCRAPE
# ==============================================
PROXYSCRAPE_API_KEY=
PROXYSCRAPE_MODE=rotating

# ==============================================
# SENTRY
# ==============================================
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=

# ==============================================
# AUTHENTICATION
# ==============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=

# ==============================================
# FASTAPI
# ==============================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true
API_SECRET_KEY=
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# PREFECT
# ==============================================
PREFECT_API_URL=http://localhost:4200/api
PREFECT_API_KEY=

# ==============================================
# CLOUDFLARE
# ==============================================
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_EMAIL=

# ==============================================
# SLACK/DISCORD (Alertas)
# ==============================================
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_AGENT_MODE=false
ENABLE_AUTO_PUBLISH=false
ENABLE_DD_MODULE=true
ENABLE_HB_DETECTION=true

# ==============================================
# DEVELOPMENT
# ==============================================
NODE_ENV=development
LOG_LEVEL=debug
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ==============================================
# PRODUCTION (Override en .env.production)
# ==============================================
# NODE_ENV=production
# LOG_LEVEL=info
# NEXT_PUBLIC_APP_URL=https://infopanama.com
# NEXT_PUBLIC_API_URL=https://api.infopanama.com
